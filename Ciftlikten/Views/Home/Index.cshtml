
@model IEnumerable<Ciftlikten.Models.urun>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@foreach (var item in Model)
{
    <div class="col-lg-3 col-sm-4 portfolio-item">
        <div class="card shadow mb-4">
            <div class="card-body">
                <h4 class="card-header py-3">
                    <a href="@Url.Action("urunDetay","Home")/@item.urunId">@item.urunName</a>
                </h4>
                <br />
                <a href="@Url.Action("urunDetay","Home")/@item.urunId">
                    <img class="card-img-top" src="@item.image" height="500" alt="kapak">
                </a>
                <hr />
                @if (item.information.Length > 150)
                {
                    <p class="card-text">
                        @Html.Raw(item.information.Substring(0, 150)) ...
                    </p>
                }
                else
                {
                    <p class="card-text">
                        @Html.Raw(item.information) ...
                    </p>
                }

            </div>
        </div>
    </div>
    <br />
}
