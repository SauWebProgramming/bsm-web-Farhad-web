@model Ciftlikten.Models.urun

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <ol class="breadcrumb bg-gradient-danger">
        <li class="breadcrumb-item active text-white">urun Detay</li>
    </ol>
</div>

<div class="col-lg-4 mb-5">
    <img width="500" height="500" class="img-fluid rounded mb-3 mb-md-0" src="@Model.image" alt="">
</div>

<div class="col-lg-4 mb-4">
    <h3>@Model.urunName</h3>
    <p>@Model.Categories.categoryName</p>
    <p>@Model.urunType</p>
    <p>@Model.publisher</p>
    <p>@Model.information</p>
    <a class="btn btn-outline-primary" href="@Url.Action("Edit","urun" , new { id = Model.urunId })">
        Kitabı Güncelle
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>
