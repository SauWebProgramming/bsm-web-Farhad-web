@model Ciftlikten.Models.urun

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="container-fluid">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.urunId)
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">urun Güncelle</h6>
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label>Kategori:</label>
                    <div class="col-md-10">
                        @Html.DropDownList("categoryId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.categoryId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Kapak Fotoğrafı:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.image, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>urun Adı:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.urunName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.urunName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>urun Yazarı:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.urunType, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.urunType, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Yayınevi:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.publisher, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.publisher, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Açıklama:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.information, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.information, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Oluştur" class="btn btn-outline-success" /> |
                    @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-outline-secondary" })
                </div>
            </div>
        </div>

    }
</div>




