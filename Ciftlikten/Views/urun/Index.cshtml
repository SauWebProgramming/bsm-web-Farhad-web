@model IEnumerable<Ciftlikten.Models.urun>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- DataTales Example -->
<div class="container-fluid">
    <div class="card shadow mb-5">
        <div class="card-header py-4">
            <h6 class="m-0 font-weight-bold text-danger">urunlar   @Html.ActionLink("Yeni urun Oluştur", "Create", null, new { @class = "btn btn-success" })</h6>

        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="m-0 font-weight-bold text-danger">Kapak Fotoğrafı</th>
                            <th class="m-0 font-weight-bold text-danger">urun Adı</th>
                            <th class="m-0 font-weight-bold text-danger">kg</th>
                            <th class="m-0 font-weight-bold text-danger">kargo tercihi</th>
                            <th class="m-0 font-weight-bold text-danger">Kategori</th>
                            <th class="m-0 font-weight-bold text-danger">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.image)</td>
                                <td>@Html.DisplayFor(modelItem => item.urunName)</td>
                                <td>@Html.DisplayFor(modelItem => item.urunType)</td>
                                <td>@Html.DisplayFor(modelItem => item.publisher)</td>
                                <td>@Html.DisplayFor(modelItem => item.Categories.categoryName)</td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Edit", new { id = item.urunId }, new { @class = "btn btn-warning" }) |
                                    @Html.ActionLink("Detay", "Details", new { id = item.urunId }, new { @class = "btn btn-primary" }) |
                                    @Html.ActionLink("Sil", "Delete", new { id = item.urunId }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
