@model IEnumerable<Ciftlikten.Models.Comments>

@{
    ViewBag.Title = "Index";

    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow mb-5">
        <div class="card-header py-4">
            <h6 class="m-0 font-weight-bold text-danger">Yorumlar</h6>

        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="m-0 font-weight-bold text-danger">Yorum İçeriği</th>
                            <th class="m-0 font-weight-bold text-danger">urun Adı</th>
                            <th class="m-0 font-weight-bold text-danger">Kullanıcı Adı</th>
                            <th class="m-0 font-weight-bold text-danger">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.commentContent)</td>
                                <td>@Html.DisplayFor(modelItem => item.urun.urunName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Users.nickname)</td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Edit", new { id = item.urunId }, new { @class = "btn btn-warning" }) |
                                    @Html.ActionLink("Detay", "Details", new { id = item.urunId }, new { @class = "btn btn-primary" }) |
                                    @Html.ActionLink("Sil", "Delete", new { id = item.urunId }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
