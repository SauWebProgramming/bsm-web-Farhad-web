@model Ciftlikten.Models.Categories

@{
    ViewBag.Title = "Edit";

    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.categoryId)
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Kategori Güncelle</h6>
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label>Kategori:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.categoryName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.categoryName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Güncelle" class="btn btn-outline-success" /> |
                        @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-outline-secondary" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>